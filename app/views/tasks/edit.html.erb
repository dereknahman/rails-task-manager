<h1>Edit task</h1>

<form action='<%="/tasks/#{@task.id}"%>' method="patch">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title: </label>
  <input type="text" name="task[title]" id="name">
  <label for="details">Details: </label>
  <input type="text" name="task[details]" id="details">
  <input type="checkbox" name="taskcomplete" value="completed"> Completed<br>
  <input type="submit">
</form>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Return to list", "/tasks" %></p>

